<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yhostin.overtactics.UpdateContact">
    <TextView android:id="@+id/title_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Nombre    "
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/title_contact"
        android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/title_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Apellidos    "
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_name"
        android:layout_alignStart="@+id/title_contact" />

    <EditText android:id="@+id/text_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title_lastname"
        android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Email   "
        android:layout_marginTop="22dp"
        android:layout_below="@+id/text_lastname"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/boton_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_email"
        android:layout_centerHorizontal="true"
        android:text="Actualizar"/>

</RelativeLayout>
